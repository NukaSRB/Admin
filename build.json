{
    "scripts": {
        "source": "./scripts/*.js",
        "watch" : "./scripts/**/*.js",
        "dest"  : "./assets/js/"
    },
    "styles": {
        "source": "./styles/*.less",
        "watch" : "./styles/**/*.less",
        "dest": "./assets/css/"
    },
    "fonts": {
        "source": [
            "./fonts/**/*",
            "./node_modules/font-awesome/fonts/**/*",
            "./node_modules/open-sans-fontface/fonts/**/*"
        ],
        "watch": "./fonts/**/*",
        "dest": "./assets/fonts/"
    },
    "images": {
        "source": "./images/**/*",
        "watch": "./images/**/*",
        "dest": "./assets/img/"
    },
    "deployment": {
        "source": ["./public"],
        "port": 2022,
        "connections": {
            "stage": "staticsite.emersonmedia.com@stage01.emersonmedia.com:/home/staticsite.emersonmedia.com/repo",
            "production": "username@production:/home/username/path"
        }
    },
    "autoprefixerOpts": {
        "browsers": [
            "> 1%",
            "Android >= 4",
            "Blackberry >= 7",
            "last 5 Chrome versions",
            "last 4 ChromeAndroid versions",
            "Firefox >= 24",
            "Firefox ESR",
            "last 4 FirefoxAndroid versions",
            "Explorer >= 8",
            "last 4 ExplorerMobile versions",
            "iOS >= 5.1",
            "Opera 12.1",
            "Opera <= 28",
            "last 4 OperaMini versions",
            "last 4 OperaMobile versions",
            "Safari >=  5"
        ]
    },
    "vendor": "./node_modules/",
    "revisions": false
}
