{
    "scripts": {
        "source": "./scripts/*.js",
        "watch" : "./scripts/**/*.js",
        "dest"  : "./assets/js/"
    },
    "styles": {
        "source": "./styles/*.less",
        "watch" : "./styles/**/*.less",
        "dest": "./assets/css/"
    },
    "fonts": {
        "source": [
            "./fonts/**/*",
            "./node_modules/font-awesome/fonts/**/*",
            "./node_modules/open-sans-fontface/fonts/**/*"
        ],
        "watch": "./fonts/**/*",
        "dest": "./assets/fonts/"
    },
    "images": {
        "source": "./images/**/*",
        "watch": "./images/**/*",
        "dest": "./assets/img/"
    },
    "deployment": {
        "source": ["./public"],
        "port": 2022,
        "connections": {
            "stage": "username@stage:/home/username/path",
            "production": "username@production:/home/username/path"
        }
    },
    "vendor": "./node_modules/",
    "revisions": false
}
